<h1 id="logo">FilmPitch</h1>
<%= link_to "Profile", user_path(current_user) %>
<%= link_to "Create a new Pitch", new_pitch_path %>
<%= link_to "All User Pitches", pitches_path %>
<%= link_to "Log Out", logout_path, method: 'delete' %>

<h4> Help make filmmakers dreams come true </h4>
<h2>Projects fully funded:</h2>
<% Pitch.order_by_title.each do |pitch| %>
    <h3><%= link_to pitch.title, pitch_path(pitch) %></h3>
    <p><%= pitch.summary %></p>
<% end %>