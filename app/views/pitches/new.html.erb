<header id="logo">
    <h1>FilmPitch</h1>
</header>

<h1><%= link_to "Home", root_path%></h1>
<h2><%= link_to "Profile", user_path(current_user) %></h2>
<%= link_to "Log Out", logout_path, method: 'delete' %>
<h3><%= link_to "Pitches", user_pitches_path(current_user)%></h3>

<div class="pitch_form">
<%= form_for @pitch, :url => { :action => "create" } do |f| %>
        <%= render partial: "pitches/form", locals: {f: f} %>
<%= f.submit "Submit" %>
<% end %>
</div>