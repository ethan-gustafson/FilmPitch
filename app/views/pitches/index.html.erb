<nav id="navbar" role="navigation" aria-label="navigation">
    <ol>
        <li><%= link_to "Home", root_path%></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Create a new Pitch", new_pitch_path %></li>
        <li><%= link_to "Log Out", logout_path, method: 'delete' %></li>
    <ol>
</nav>

<main>

    <h1>Pitches:</h1>

    <nav role="navigation" aria-label="User Pitches">
        <ul>
            <% @pitches.each do |pitch| %>
                <li><%= link_to pitch.user.username, user_path(pitch.user) %> - <%= link_to pitch.title, pitch_path(pitch.id) %></li>
            <% end %>
        </ul>
    </nav>

</main>

