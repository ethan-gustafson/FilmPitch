<main>
    <article>
        <section>
            <%= form_for(:user, url: login_path) do |f| %>
                <p><%= flash.notice %></p>
                <%= f.text_field :username, placeholder: "Username" %>
                <%= f.password_field :password, placeholder: "Password" %>
                <%= f.submit "Log In" %>
            <% end %>
        </section>
        
        <section>
            <h2>Don't have an account? <%= link_to "Sign up", new_user_path %></h2>
            <h2>Login through Twitter? <%= link_to "Log in", '/auth/twitter' %></h2>
        </section>
    </article>
</main>