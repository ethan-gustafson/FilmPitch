<main id="login_form">
    <%= form_for(:user, url: login_path) do |f| %>
        <p><%= flash.notice %></p>
        <%= f.text_field :username, placeholder: "Username" %>

        <br><br>

        <%= f.password_field :password, placeholder: "Password" %>
    
        <br><br>

        <%= f.submit "Log In" %>
        
    <section>
        <h3>Don't have an account? <%= link_to "Sign up", new_user_path %></h3>
        <h3>Login through Twitter? <%= link_to "Log in", '/auth/twitter' %></h3>
    </section>

    <% end %>

</main>